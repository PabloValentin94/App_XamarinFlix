<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_XamarinFlix.Categorias.Ficcao_Cientifica"
             BackgroundColor="#2f2f30">
    
    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical">

            <Image x:Name="Logo" Style="{ StaticResource LogoNaListaDePosters }"/>
            
            <Label Text="Ficção Científica" Style="{ StaticResource LabelTextoBranco }"/>

            <ScrollView>

                <Grid Padding="5">

                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>

                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>

                        <RowDefinition Height="300"/>

                    </Grid.RowDefinitions>

                    <ImageButton Grid.Row="0" Grid.Column="0"
                                 x:Name="btn_o_projeto_adam"
                                 Style="{ StaticResource ButtonPosters }"
                                 BorderColor="#e80000"
                                 Clicked="btn_o_projeto_adam_Clicked"/>

                </Grid>

            </ScrollView>

        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>